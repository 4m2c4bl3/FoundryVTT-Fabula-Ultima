<div class='resource-content desc'>
    <nav class='verse-tabs tabs flexrow' data-group='verseTabs'>
        <a class='item tab-style' data-tab='description'>{{localize 'FU.Description'}}</a>
        <a class='item tab-style' data-tab='config'>{{localize 'FU.ClassFeatureVerseConfig'}}</a>
    </nav>
    <div class='verse-content'>
        <div class='tab' data-group='verseTabs' data-tab='description'>
            <div>
                <label>
                    {{localize 'FU.ClassFeatureVerseKey'}}
                    <select name='system.data.key'>
                        <option value="">-</option>
                        {{selectOptions additionalData.keys selected=system.data.key.id nameAttr='id' labelAttr='name'}}
                    </select>
                </label>
            </div>

            <div>
                <label>
                    {{localize 'FU.ClassFeatureVerseTone'}}
                    <select name='system.data.tone'>
                        <option value="">-</option>
                        {{selectOptions additionalData.tones selected=system.data.tone.id nameAttr='id' labelAttr='name'}}
                    </select>
                </label>
            </div>

            <div>
                {{{additionalData.description}}}
            </div>
        </div>
        <div class="tab" data-group="verseTabs" data-tab="config">
            {{#each system.data.config}}

                <div>
                    <label>
                        {{localize (lookup ../additionalData.volumes @key)}} {{localize 'FU.MindPointCost'}}:
                        <input type="number" name="system.data.config.{{@key}}" value="{{this}}">
                    </label>
                </div>

                {{#unless @last}}
                    <hr>
                {{/unless}}
            {{/each}}
        </div>
    </div>
</div>