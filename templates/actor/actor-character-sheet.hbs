<form class="{{ cssClass }} {{
    actor.type
  }} backgroundstyle fabulaultima-actor-sheet" autocomplete="off">
	<header class="sheet-header">
		{{!-- Start First Section Header --}}
		{{>"systems/fabulaultima/templates/actor/partials/actor-statistics.hbs" actor=actor}}
		{{!-- Resources Header --}}
		{{>"systems/fabulaultima/templates/actor/partials/actor-resources.hbs" actor=actor}}
		{{!-- Current Affinities Header --}}
		{{>"systems/fabulaultima/templates/actor/partials/actor-affinities.hbs" actor=actor}}
	</header>

	{{!-- Start Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		{{!-- Default tab is specified in actor-sheet.mjs --}}
		<a class="item rollable tab-style" data-tab="stats">{{localize 'FU.Stats'}}</a>
		<a class="item rollable tab-style" data-tab="classes">{{localize 'FU.Classes'}}</a>
		<a class="item rollable tab-style" data-tab="features">{{localize 'FU.Features'}}</a>
		<a class="item rollable tab-style" data-tab="spells">{{localize 'FU.Spells'}}</a>
		<a class="item rollable tab-style" data-tab="items">{{localize 'FU.Items'}}</a>
		<a class="item tab-style" data-tab="effects" data-tooltip="{{localize 'FU.Effects'}}"
			aria-describedby="tooltip"><i class="fa-solid fa-wand-magic-sparkles"></i></a>
		<a class="item tab-style" data-tab="settings" data-tooltip="{{localize 'FU.Settings'}}"
			aria-describedby="tooltip"><i class="fa-solid fa-bars"></i></a>
	</nav>

	{{!-- End Sheet Tab Navigation --}} {{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Owned Stats Tab --}}
		<div class="tab stats" data-group="primary" data-tab="stats">
			<section class="grid grid-3col">
				<aside class="sidebar flex-group-center">
					<!-- Abilities Section -->
					<div class="abilities desc flexcol">
						<div class="desc-header resource-content">
							<label class="resource-label-l">{{localize 'FU.Attributes'}}</label>
						</div>
						{{#each system.attributes as |attribute key|}}
						<div class="ability resource-content flexrow flex-group-center">
							<label class="flexlarge align-left" data-label="{{ attribute.label }}">
								<span class="resource-label">{{ attribute.label }}</span>
							</label>
							<select class="resource-inputs" data-dtype="Number" value="{{ attribute.base }}"
								name="system.attributes.{{ key }}.base">
								{{#select attribute.base}}
								<option value="6">d6</option>
								<option value="8">d8</option>
								<option value="10">d10</option>
								<option value="12">d12</option>
								{{/select}}
							</select>
							<label class="ability-mod">
								<span class="resource-label-sm">{{ attribute.current }}</span>
							</label>
						</div>
						{{/each}}
					</div>

					<!-- Action Buttons -->
					<div class="action-container grid grid-2col">
						{{#each items as |item id|}}
						{{#if (and item.system.isEquipped.value (eq item.system.isEquipped.slot "mainHand"))}}
						<span class="action-button left-hand rollable" id="attackAction" data-action="attackAction"
							data-roll-type="item-slot">
							<span class="icon-letter">M</span>{{ item.name }}
						</span>
						{{/if}}
						{{#if (and item.system.isEquipped.value (eq item.system.isEquipped.slot "offHand"))}}
						<span class="action-button right-hand rollable" id="defenseAction" data-action="defenseAction"
							data-roll-type="item-slot">
							<span class="icon-letter">O</span>{{ item.name }}
						</span>
						{{/if}}
						{{/each}}
					</div>

				</aside>
				<!-- Favorite Section -->
				<div class="grid-span-2">
					<section class="align-center desc">{{>
						"systems/fabulaultima/templates/actor/partials/actor-favorite.hbs" groups=systemData.bond
						dtypes=dtypes actor=actor}}</section>
				</div>
			</section>

			{{> systems/fabulaultima/templates/actor/partials/actor-divider.hbs customLabel=(localize 'FU.Traits')}}
			{{!--
			Traits Section --}}
			<section class="section-container">
				<div class="grid grid-2col">
					<div class="traits resource-content flex-group-center">
						<label>
							<span class="resource-label-l">{{localize 'FU.Identity'}}</span>
						</label>
						<input type="text" name="system.resources.identity.name"
							value="{{ system.resources.identity.name }}" data-dtype="String" />
					</div>
					<div class="traits resource-content flex-group-center">
						<label>
							<span class="resource-label-l">{{localize 'FU.Pronouns'}}</span>
						</label>
						<input type="text" name="system.resources.pronouns.name"
							value="{{ system.resources.pronouns.name }}" data-dtype="String" />
					</div>
					<div class="traits resource-content flex-group-center">
						<label>
							<span class="resource-label-l">{{localize 'FU.Theme'}}</span>
						</label>
						<input type="text" name="system.resources.theme.name" value="{{ system.resources.theme.name }}"
							data-dtype="String" />
					</div>
					<div class="traits resource-content flex-group-center">
						<label>
							<span class="resource-label-l">{{localize 'FU.Origin'}}</span>
						</label>
						<input type="text" name="system.resources.origin.name"
							value="{{ system.resources.origin.name }}" data-dtype="String" />
					</div>
				</div>
			</section>

			{{> systems/fabulaultima/templates/actor/partials/actor-divider.hbs customLabel=(localize 'FU.Bonds')}} {{>
			"systems/fabulaultima/templates/actor/partials/actor-bonds.hbs" bond=bond bondIndex=bondIndex}}
		</div>
		{{!-- Handlebar Partials --}}
		{{!-- Classes Tab --}}
		<div class="tab classes" data-group="primary" data-tab="classes">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-classes.hbs" actor=actor}}</div>
		{{!-- Owned Features Tab --}}
		<div class="tab features" data-group="primary" data-tab="features">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-features.hbs" actor=actor}}</div>
		{{!-- Owned Spells Tab --}}
		<div class="tab spells" data-group="primary" data-tab="spells">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-spells.hbs" actor=actor}}</div>
		{{!-- Owned Items Tab --}}
		<div class="tab items" data-group="primary" data-tab="items">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-items.hbs" actor=actor}}</div>
		{{!-- Active Effects Tab --}}
		<div class="tab effects flexcol" data-group="primary" data-tab="effects">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-effects.hbs" actor=actor}}</div>
		{{!-- Settings Tab --}}
		<div class="tab settings flexcol" data-group="primary" data-tab="settings">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-settings.hbs" actor=actor}}</div>
	</section>
</form>