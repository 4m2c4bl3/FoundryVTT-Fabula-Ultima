<form class="{{ cssClass }} {{
    actor.type
  }} backgroundstyle fabulaultima-actor-sheet" autocomplete="off">
	<header class="sheet-header">
		{{!-- Start First Section Header --}}
		<div class="combine-header">
			<img class="profile-img" src="{{ actor.img }}" data-edit="img" data-tooltip="{{ actor.name }}" />

			<div class="header-fields">
				<div class="header-center grid grid-6col">
					<h1 class="charname grid-span-4">
						<input name="name" type="text" value="{{ actor.name }}" placeholder="Name"
							class="resource-inputs-charname auto-shrink" />
					</h1>

					<!-- Level -->
					<span class="resource-content levelup-container flex-group-center">
						<label class="resource-label-sm" data-tooltip="{{localize 'FU.Level'}}"
							aria-describedby="tooltip"> <i class="fa-solid fa-chart-simple icon"></i>{{localize
							'FU.LevelAbbr'}} </label>
						<input type="number" name="system.level.value" value="{{ system.level.value }}"
							data-dtype="Number" class="resource-inputs" />
					</span>

					<!-- Rank -->
					<span class="resource-content levelup-container flex-group-center">
						<label class="resource-label-sm" data-tooltip="{{localize 'FU.Rank'}}"
							aria-describedby="tooltip"> <i class="fa-solid fa-feather-pointed icon"></i>{{localize
							'FU.Rank'}} </label>
						<span class="flexrow combineBar">
							<input type="text" name="system.isChampion.value" value="{{ system.isChampion.value }}"
								data-dtype="Number" class="resource-inputs" {{#if system.isCompanion.value}} disabled
								{{/if}} />
							<span>
								<input type="checkbox" id="isEliteCheckbox" class="style-checkbox"
									data-tooltip="{{localize 'FU.isElite'}}" name="system.isElite.value" {{#if
									system.isCompanion.value}} disabled {{/if}} {{checked system.isElite.value}} />
							</span>
						</span>
					</span>
				</div>

				{{!-- Point Bars --}}
				<div class="grid grid-3col">
					{{!-- HP--}}
					<div class="resource-content flex-group-center">
						<div class="grid grid-2col" style="padding: 0 3px">
							<label class="resource-label-l align-left grid-span-1"
								data-tooltip="{{localize 'FU.HealthPoints'}}" aria-describedby="tooltip">
								{{#if (lte system.resources.hp.value (half system.resources.hp.max))}}
								<i class="fa-solid fa-heart-crack is-martial"></i>
								{{else}}
								<i class="fa-solid fa-heart"></i>
								{{/if}} {{localize 'FU.HealthAbbr'}}
							</label>
							<span class="resource-label-l grid-start-2 align-right">
								{{half system.resources.hp.max}}
								<i class="fa-solid fa-heart-crack"></i>
							</span>
						</div>
						<div class="bar bar-progress">
							<div class="bar-progress-bar bar-hp"
								style="width: {{calculatePercentage system.resources.hp.value system.resources.hp.max}};">
							</div>
							<span class="bar-value"></span>
						</div>
						<div class="resource-content flexrow flex-center flex-between align-center">
							<input class="resource-current-input bar-start" type="number"
								name="system.resources.hp.value" value="{{ system.resources.hp.value }}"
								data-dtype="Number" />
							<span class="resource-middle-input bar-middle" data-tooltip="{{localize 'FU.HealthPoints'}}<br>Current: {{
                  system.resources.hp.value
                }}<br>Crisis: {{half system.resources.hp.max}}
              <br>Bonus: {{ system.resources.hp.bonus }} <br>Max: {{
                  system.resources.hp.max
                }}" aria-describedby="tooltip">
								{{#if (lte system.resources.hp.value (half system.resources.hp.max))}}
								<i class="fa-solid fa-caret-up is-crisis float-text"></i>
								{{else}}
								<i class="fa-solid fa-caret-up"></i>
								{{/if}}
							</span>
							<input class="resource-max-input bar-end" type="number" name="system.resources.hp.max"
								value="{{ system.resources.hp.max }}" data-dtype="Number"
								disabled="{{ system.resources.hp.max }}" />
						</div>
					</div>

					{{!-- MP --}}
					<div class="resource-content flex-group-center">
						<div class="grid grid-2col" style="padding: 0 3px">
							<label class="resource-label-l align-left grid-span-1" data-tooltip="Mind Points"
								aria-describedby="tooltip"> <i
									class="fa-solid fa-wand-magic-sparkles icon"></i>{{localize 'FU.MindAbbr'}} </label>
							<label class="resource-label-l align-right rollable" data-tooltip="Rest"
								aria-describedby="tooltip"> <i class="fa-solid fa-bed rest"></i></label>
						</div>
						<div class="bar bar-progress">
							<div class="bar-progress-bar bar-mp"
								style="width: {{calculatePercentage system.resources.mp.value system.resources.mp.max}};">
							</div>
							<span class="bar-value"></span>
						</div>
						<div class="resource-content flexrow flex-center flex-between align-center">
							<input class="resource-current-input bar-start" type="number"
								name="system.resources.mp.value" value="{{ system.resources.mp.value }}"
								data-dtype="Number" class="resource-inputs bar-start" />
							<span class="resource-middle-input bar-middle" data-tooltip="{{localize 'FU.MindPoints'}}<br>Current: {{
                  system.resources.mp.value
                }}<br>Bonus: {{ system.resources.mp.bonus }} <br>Max: {{
                  system.resources.mp.max
                }}" aria-describedby="tooltip">
								<i class="fa-solid fa-caret-up"></i>
							</span>
							<input class="resource-max-input bar-end" type="number" name="system.resources.mp.max"
								value="{{ system.resources.mp.max }}" data-dtype="Number"
								disabled="{{ system.resources.mp.max }}" />
						</div>
					</div>

					{{!-- Creature Rank --}}
					<div class="resource-content levelup-container creature flex-group-center">
						<label class="resource-label-l" data-tooltip="Species Type" aria-describedby="tooltip">
							<div class="resource-label-l"><i class="fa-solid fa-chart-simple icon"></i>{{localize
								'FU.Creature'}}</div>
						</label>
						<div class="resource-content flexrow flex-center flex-between buttons-inc combineBar">
							<select value="{{ system.species.value }}" name="system.species.value"
								class="resource-inputs">
								{{#select system.species.value}} {{#if system.isCompanion.value}}
								{{!-- Companion Options --}}
								<option value="beast">{{localize 'FU.Beast'}}</option>
								<option value="construct">{{localize 'FU.Construct'}}</option>
								<option value="elemental">{{localize 'FU.Elemental'}}</option>
								<option value="plant">{{localize 'FU.Plant'}}</option>
								<option value="custom">{{localize 'FU.Custom'}}</option>
								{{else}}
								{{!-- Creature Options --}}
								<option value="beast">{{localize 'FU.Beast'}}</option>
								<option value="construct">{{localize 'FU.Construct'}}</option>
								<option value="demon">{{localize 'FU.Demon'}}</option>
								<option value="elemental">{{localize 'FU.Elemental'}}</option>
								<option value="monster">{{localize 'FU.Monster'}}</option>
								<option value="plant">{{localize 'FU.Plant'}}</option>
								<option value="undead">{{localize 'FU.Undead'}}</option>
								<option value="humanoid">{{localize 'FU.Humanoid'}}</option>
								<option value="custom">{{localize 'FU.Custom'}}</option>
								{{/if}} {{/select}}
							</select>
							<span class="resource-inputs" style="flex: 0; margin: 0">
								<input type="checkbox" id="isCompanionCheckbox" class="style-checkbox"
									data-tooltip="{{localize 'FU.isCompanion'}}" name="system.isCompanion.value"
									{{checked system.isCompanion.value}} />
							</span>
						</div>
					</div>
				</div>
			</div>
			{{!-- End First Section Header --}}
		</div>

		{{!-- Resources Header --}}
		{{>"systems/fabulaultima/templates/actor/partials/actor-resources.hbs" actor=actor}}
		{{!-- Current Affinities Header --}}
		{{>"systems/fabulaultima/templates/actor/partials/actor-affinities.hbs" actor=actor}}
	</header>

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		{{!-- Default tab is specified in actor-sheet.mjs --}}
		<a class="item rollable tab-style" data-tab="attributes">{{localize 'FU.Stats'}}</a>
		<a class="item rollable tab-style" data-tab="spells">{{localize 'FU.Spells'}}</a>
		<a class="item rollable tab-style" data-tab="items">{{localize 'FU.Items'}}</a>
		<a class="item rollable tab-style" data-tab="behavior">{{localize 'FU.Behavior'}}</a>
		<a class="item rollable tab-style" data-tab="effects" data-tooltip="{{localize 'FU.Effects'}}"
			aria-describedby="tooltip"><i class="fa-solid fa-wand-magic-sparkles"></i></a>
		<a class="item rollable tab-style" data-tab="settings" data-tooltip="{{localize 'FU.Settings'}}"
			aria-describedby="tooltip"><i class="fa-solid fa-bars"></i></a>
	</nav>
	{{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Owned Features Tab --}}
		<div class="tab features" data-group="primary" data-tab="attributes">

			<section class="grid grid-3col">
				<aside class="sidebar flex-group-center">
					<!-- Abilities Section -->
					<div class="abilities desc flexcol">
						<div class="desc-header resource-content">
							<label class="resource-label-l">{{localize 'FU.Attributes'}}</label>
						</div>
						{{#each system.attributes as |attribute key|}}
						<div class="ability resource-content flexrow flex-group-center">
							<label class="flexlarge align-left" data-label="{{ attribute.label }}">
								<span class="resource-label">{{ attribute.label }}</span>
							</label>
							<select class="resource-inputs" data-dtype="Number" value="{{ attribute.base }}"
								name="system.attributes.{{ key }}.base">
								{{#select attribute.base}}
								<option value="6">d6</option>
								<option value="8">d8</option>
								<option value="10">d10</option>
								<option value="12">d12</option>
								{{/select}}
							</select>
							<label class="ability-mod">
								<span class="resource-label-sm">{{ attribute.current }}</span>
							</label>
						</div>
						{{/each}}
					</div>

					<!-- Action Buttons -->
					<div class="action-container grid grid-2col">
						{{#each items as |item id|}}
						{{#if (and item.system.isEquipped.value (eq item.system.isEquipped.slot "mainHand"))}}
						<span class="action-button left-hand rollable" id="attackAction" data-action="attackAction"
							data-roll-type="item-slot">
							<span class="icon-letter">M</span>{{ item.name }}
						</span>
						{{/if}}
						{{#if (and item.system.isEquipped.value (eq item.system.isEquipped.slot "offHand"))}}
						<span class="action-button right-hand rollable" id="defenseAction" data-action="defenseAction"
							data-roll-type="item-slot">
							<span class="icon-letter">O</span>{{ item.name }}
						</span>
						{{/if}}
						{{/each}}
					</div>

					{{!-- NPC Skills --}}
					<div class="abilities desc flexcol">{{>
						"systems/fabulaultima/templates/actor/partials/actor-npc-skills.hbs" actor=actor}}</div>
				</aside>
				<div class="stats-container grid-span-2">
					<section class="npc-border-col desc">
						<li class="flexrow flex-group-center desc-header resource-content">
							<label class="resource-label-l">{{localize 'FU.Traits'}}</label>
							<input class="traitdesc flex3" type="text" name="system.traits.value"
								value="{{ system.traits.value }}" placeholder="Typical Traits" data-dtype="String" />
						</li>
						<section class="flex2 npc-desc">{{editor system.description target="system.description"
							rollData=rollData button=true owner=owner editable=editable }}</section>
					</section>
					<!-- Favorite Section -->
					<section class="desc">{{> "systems/fabulaultima/templates/actor/partials/actor-favorite.hbs"
						groups=systemData.bond dtypes=dtypes}}</section>
				</div>
			</section>
		</div>
		<div class="tab items" data-group="primary" data-tab="items">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-items.hbs" actor=actor}}</div>
		{{!-- Owned Spells Tab --}}
		<div class="tab spells" data-group="primary" data-tab="spells">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-spells.hbs" actor=actor}}</div>
		{{!-- Behavior Tab --}}
		<div class="tab behavior" data-group="primary" data-tab="behavior">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-behavior.hbs" actor=actor}}</div>
		{{!-- Active Effects Tab --}}
		<div class="tab effects flexcol" data-group="primary" data-tab="effects">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-effects.hbs" actor=actor}}</div>
		{{!-- Settings Tab --}}
		<div class="tab effects flexcol" data-group="primary" data-tab="settings">{{>
			"systems/fabulaultima/templates/actor/partials/actor-section-settings.hbs" actor=actor}}</div>
	</section>
</form>