<form class="{{ cssClass }} backgroundstyle" autocomplete="off">
	{{> "systems/projectfu/templates/item/partials/item-header.hbs" dtypes=dtypes}}

	{{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Description Tab --}}
		<div class="tab desc" data-group="primary" data-tab="description">{{editor system.description
			target="system.description" rollData=rollData button=true owner=owner editable=editable}}</div>

		{{!-- Attributes Tab --}}
		<div class="tab attributes" data-group="primary" data-tab="attributes">
			<div class="item-settings resource-content">
				{{> "systems/projectfu/templates/item/partials/item-controls.hbs" actor=actor}}
				<label class="checkbox resource-label-sm"> <span>{{localize 'FU.HRZeroStatus'}}</span><input
						type="checkbox" name="system.rollInfo.useWeapon.hrZero.value" {{ checked
						system.rollInfo.useWeapon.hrZero.value }} /> </label>
				<label class="checkbox resource-label-sm"> <span>{{localize 'FU.IsOffensive'}}</span><input
						type="checkbox" name="system.isOffensive.value" {{ checked system.isOffensive.value }} />
				</label>
			</div>
			<section class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.GeneralInfo'}}</label>
				</div>
				<div class="grid grid-4col card-style">
					<div class="resource-content flexcol flex-group-center card-style  grid-span-3">
						<label class="resource-label-m">{{localize 'FU.Opportunity'}}</label>
						<input type="text" name="system.opportunity" value="{{ system.opportunity }}"
							class="resource-inputs select-dropdown-full" />
					</div>
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.Class'}}</label>
						<input type="text" name="system.class.value" value="{{ system.class.value }}"
							class="resource-inputs select-dropdown-l" />
					</div>
				</div>
			</section>

			<section class="grid grid-2col">
				<section class="flex1 flex-group-center desc flex-row">
					<div class="desc-header resource-content">
						<label class="resource-label-m"><i class="fas fa-dice icon"></i>{{localize
							'FU.Accuracy'}}</label>
						|
						<label class="checkbox resource-label-m"> <span>{{localize 'FU.HasAccuracy'}}</span><input
								type="checkbox" name="system.hasRoll.value" {{ checked system.hasRoll.value }} />
						</label>
					</div>
					<div class="grid grid-3col card-style">
						<div class="resource-content flexcol flex-group-center">
							<label for="system.rollInfo.attributes.primary.value" class="resource-label-m">{{localize
								'FU.Primary'}} </label>
							<select value="{{ system.rollInfo.attributes.primary.value }}"
								name="system.rollInfo.attributes.primary.value" class="resource-inputs select-dropdown">
								{{selectOptions attrAbbr selected=system.rollInfo.attributes.primary.value sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label for="system.rollInfo.attributes.secondary.value" class="resource-label-m">{{localize
								'FU.Secondary'}} </label>
							<select value="{{ system.rollInfo.attributes.secondary.value }}"
								name="system.rollInfo.attributes.secondary.value"
								class="resource-inputs select-dropdown">
								{{selectOptions attrAbbr selected=system.rollInfo.attributes.secondary.value sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label class="resource-label-m">{{localize 'FU.Bonus'}}</label>
							<input type="number" name="system.rollInfo.accuracy.value"
								value="{{ system.rollInfo.accuracy.value }}" class="resource-inputs"
								data-dtype="Number" />
						</div>
					</div>
				</section>

				<section class="flex2 flex-group-center desc">
					<div class="desc-header resource-content">
						<label class="resource-label-m"><i class="fas fa-bullseye icon"></i>{{localize 'FU.Damage'}}
						</label>
						|
						<label class="checkbox resource-label-m"> <span>{{localize 'FU.HasDamage'}}</span><input
								type="checkbox" name="system.rollInfo.damage.hasDamage.value" {{ checked
								system.rollInfo.damage.hasDamage.value }} /> </label>
					</div>
					<div class="grid grid-2col card-style">
						<div class="resource-content flexcol flex-group-center">
							<label for="system.rollInfo.impdamage.type.value"
								class="resource-label-m flexlarge">{{localize 'FU.DamageType'}} </label>
							<select value="{{ system.rollInfo.damage.type.value }}"
								name="system.rollInfo.damage.type.value" class="resource-inputs select-dropdown-m">
								{{selectOptions damageTypes selected=system.rollInfo.damage.type.value blank='FU.Untyped' sort=true localize=true}}
							</select>
						</div>
						<div class="resource-content flexcol flex-group-center">
							<label class="resource-label-m">{{localize 'FU.Bonus'}}</label>
							<input type="number" name="system.rollInfo.damage.value"
								value="{{ system.rollInfo.damage.value }}" class="resource-inputs"
								data-dtype="Number" />
						</div>
					</div>
				</section>
			</section>

			{{#if (and (eq actor.type "npc") system.isBehavior.value)}}
			<section class="flex1 flex-group-center desc">
				<div class="desc-header resource-content">
					<label class="resource-label-m">{{localize 'FU.OptionalFeats'}}</label>
				</div>
				<div class="grid grid-4col card-style">
					<div class="resource-content flexcol flex-group-center">
						<label class="resource-label-m">{{localize 'FU.BehaviorWeight'}}</label>
						<input type="number" name="system.weight.value" value="{{ system.weight.value }}"
							data-dtype="Number" class="resource-inputs select-dropdown-m" />
					</div>
				</div>
			</section>
			{{/if}}
		</div>
	</section>
</form>