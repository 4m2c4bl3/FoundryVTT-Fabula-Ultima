<header class="sheet-header desc" style="background-color: #c9c8b9;">
	<div class="combine-header">
		<img class="profile-img" src="{{ item.img }}" data-edit="img" title="{{ item.name }}" />
		<div class="header-fields">
			<div class="header-start grid grid-6col">
				<div class="charname-container flexrow grid-span-4">
					<h2 class="charname" style="flex: 4;">
						<input name="name" type="text" value="{{ item.name }}" placeholder="Name"
							data-tooltip="{{ item.name }}"  class="resource-inputs-charname auto-shrink" />
					</h2>
					<h3 class="has-martial flexrow" style="border-bottom: 0; max-width: fit-content;">
						{{#if system.isMartial.value}}
						<i class="fusl is-martial fu-martial icon-aff" style="width: 48px; height: 48px;"></i>
						{{/if}}
						{{#if system.isOffensive.value}}
						<i class="fusl is-martial fu-offensive icon-aff" style="width: 48px; height: 48px; margin-top: 2px;"></i>
						{{/if}}
					</h3>
				</div>

				{{!-- Part --}}
				<span class="flexrow grid-span-2" style="gap: 2px; border-bottom: 2px solid; border-image: linear-gradient(to right, #bfb4c5, #e6e2e8) 1; border-left: rgb(255, 173, 200) 3px solid;">

					{{!-- Item Type --}}
					<span class="resource-content levelup-container flexcol flex-group-center">
						<label class="resource-label-m" for="item.type" > <i
							class="fa-solid fa-chart-simple icon"></i>{{localize 'FU.ItemType'}}</label>
						<input type="text" name="item.type" value="{{capitalize item.type}}" data-dtype="String"
							class="resource-inputs" disabled style="border-radius: 0 12px 0 0;"/>
					</span>

					{{!-- Source --}}
					<span class="resource-content levelup-container flexcol flex-group-center" style="border-top-right-radius: 12px;">
						<label class="resource-label-m rollable" id="pdfLink"> <i
							class="fa-solid fa-book icon"></i>{{localize 'FU.Source'}} </label>
						<input type="text" name="system.source.value" value="{{ system.source.value }}" data-dtype="String" style="border-radius: 12px 0 0;"
							class="resource-inputs" />
					</span>
				</span>
			</div>

			{{!-- Center Header --}}
			<div class="item-header header-field header-center grid grid-3col desc" style="border-radius: 0 0 12px 0; padding: 9px">
				<div class="resource-content summary grid-span-3">
					<label class="resource-label-sm" for="system.summary.value"> <i
							class="fa-solid fa-chart-simple icon"></i>{{localize 'FU.Summary'}} </label>
					<blockquote><input type="text" name="system.summary.value" value="{{ system.summary.value }}"
							data-dtype="String" class="flex-group-center resource-inputs summary" data-tooltip="{{ system.summary.value }}"/></blockquote>
				</div>

				{{!-- Key Attributes --}}
				<div class="resource-content summary grid-span-3">
					<label class="resource-label-sm" style="position: sticky;" for="system.summary.value"> <i
							class="fa-solid fa-chart-simple icon"></i>{{localize
						'FU.AttributesKey'}}
					</label>
					<div class="grid grid-3col card-style" style="margin-top: 6px;">
						{{#if (eq item.type "weapon")}}
						{{> "systems/projectfu/templates/item/partials/item-weapon-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "shield")}}
						{{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "armor")}}
						{{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "accessory")}}
						{{> "systems/projectfu/templates/item/partials/item-defense-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "spell")}}
						{{> "systems/projectfu/templates/item/partials/item-spell-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "class")}}
						{{> "systems/projectfu/templates/item/partials/item-class-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "skill")}}
						{{> "systems/projectfu/templates/item/partials/item-skill-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "heroic")}}
						{{> "systems/projectfu/templates/item/partials/item-heroic-header.hbs" dtypes=dtypes}}
						{{else if (eq item.type "zeroPower")}}
						{{> "systems/projectfu/templates/item/partials/item-progress-header.hbs" dtypes=dtype }}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="grid grid-3col" style="width: -webkit-fill-available;">
		{{!-- Sub Type --}}
		<span class="resource-content flexcol flex-group-center desc">
			<label class="resource-label-sm" for="item.type"> <i
					class="fa-solid fa-chart-simple icon"></i>{{localize 'FU.SubType'}}</label>
			{{#if (eq item.type "heroic")}}
			<span>
				<select type="select" value="" name="system.subtype.value" data-dtype="String"
					class="resource-inputs select-dropdown-l">
					{{#select system.subtype.value}}
					<option value="skill">Heroic Skill</option>
					<option value="style">Heroic Style</option>
					{{/select}}
				</select>
			</span>
			{{else if (eq item.type "miscAbility")}}
			<span>
				<select type="select" value="" name="system.subtype.value" data-dtype="String"
					class="resource-inputs select-dropdown-l">
					{{#select system.subtype.value}}
					<option value="custom">Custom</option>
					<option value="arcana">Arcana</option>
					<option value="deck">Deck</option>
					<option value="verse">Verse</option>
					<option value="dance">Dance</option>
					<option value="gift">Gift</option>
					<option value="magiseed">Magiseed</option>
					<option value="invention">Invention</option>
					<option value="invocation">Invocation</option>
					<option value="therioform">Therioform</option>
					<option value="symbol">Symbol</option>
					<option value="infusion">Infusion</option>
					<option value="quirk">Quirk</option>
					<option value="other">Other Action</option>
					{{/select}}
				</select>
			</span>
			{{else if (eq item.type "treasure")}}
			<span>
				<select type="select" value="" name="system.subtype.value" data-dtype="String"
					class="resource-inputs select-dropdown-l">
					{{#select system.subtype.value}}
					<option value="treasure">Treasure</option>
					<option value="material">Material</option>
					<option value="artifact">Artifact</option>
					{{/select}}
				</select>
			</span>
			{{/if}}
		</span>

		{{!-- Sheet Tab Navigation --}}
		<nav class="sheet-tabs tabs desc flexrow grid-span-2" data-group="primary" style="align-self: stretch;">
			<a class="item tab-style" data-tab="description">{{localize 'FU.Description'}}</a>
			<a class="item tab-style" data-tab="attributes">{{localize 'FU.Attributes'}}</a>
			<a class="item tab-style" data-tab="effects">{{localize 'FU.Effects'}}</a>
		</nav>
	</div>
</header>