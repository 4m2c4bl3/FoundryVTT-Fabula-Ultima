<div class="resource-content">
    <div class="item-settings desc">
        <label class="checkbox resource-label-m" data-tooltip="{{localize 'FU.ClockStatus'}}">
            <span>
                {{#if system.data.hasClock.value}}
                <i class="fas fa-clock"></i>
                {{else}}
                <i class="far fa-clock"></i>
                {{/if}}
            </span><input type="checkbox" name="system.data.hasClock.value" {{ checked system.data.hasClock.value }} />
        </label>
    </div>
    <div class="">
        <fieldset class="title-fieldset section-container desc resource-content flexrow">
            <div class="resource-content flexcol flex-group-center">
                <label class="resource-label-m">{{localize 'FU.Current'}}</label>
                <input type="text" name="system.data.progress.current" value="{{ system.data.progress.current }}"
                       class="resource-inputs select-dropdown-l" />
            </div>
            <div class="resource-content flexcol flex-group-center">
                <label class="resource-label-m">{{localize 'FU.Step'}}</label>
                <input type="text" name="system.data.progress.step" value="{{ system.data.progress.step }}"
                       class="resource-inputs select-dropdown-l" />
            </div>
            <div class="resource-content flexcol flex-group-center">
                <label class="resource-label-m">{{localize 'FU.Max'}}</label>
                <input type="text" name="system.data.progress.max" value="{{ system.data.progress.max }}"
                       class="resource-inputs select-dropdown-l" />
            </div>
        </fieldset>
    </div>
    <div class="grid grid-2col gap-5">
        {{!-- Zero Trigger --}}
        <fieldset class="title-fieldset desc resource-content">
            <legend class="resource-label-full">
                <input type="text" name="system.data.zeroTrigger.value" value="{{ system.data.zeroTrigger.value }}"
                       data-dtype="String" placeholder="{{localize 'FU.LimitTrigger'}}" data-tooltip="
							{{localize 'FU.LimitTrigger'}}"
                       class="resource-label-m resource-inputs select-dropdown-full" />
            </legend>
            {{editor enrichedHtml.zeroTrigger.description target="system.data.zeroTrigger.description"
                     engine="prosemirror"
                     rollData=rollData button=true owner=owner editable=editable }}
        </fieldset>

        {{!-- Zero Effect --}}
        <fieldset class="title-fieldset desc resource-content">
            <legend class="resource-label-full">
                <input type="text" name="system.data.zeroEffect.value" value="{{ system.data.zeroEffect.value }}"
                       data-dtype="String" placeholder="{{localize 'FU.LimitEffect'}}"
                       data-tooltip="{{localize 'FU.LimitEffect'}}"
                       class="resource-label-m resource-inputs select-dropdown-full" />
            </legend>
            {{editor enrichedHtml.zeroEffect.description target="system.data.zeroEffect.description"
                     engine="prosemirror"
                     rollData=rollData button=true owner=owner editable=editable }}
        </fieldset>
    </div>
</div>