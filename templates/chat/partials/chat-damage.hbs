<div class='damage-desc align-left'>
    <div class='damage-box'>
        <span class='damage-title'>{{localize 'FU.Damage'}}</span>
    </div>
    <div class='damage-details' {{#if modifiers}}data-tooltip="{{#each modifiers}}{{localize label}}: {{value}}{{#unless @last}}<br>{{/unless}}{{/each}}"{{/if}}>
		<span class='damage-detail-text'>
			{{#if (not damage.hrZero)}}
                {{#if (gte result.attr1 result.attr2)}}
                    {{result.attr1}}
                {{else}}
                    {{result.attr2}}
                {{/if}}
                <strong>({{localize 'FU.HighRollAbbr'}})</strong>
                +
            {{/if}}
            {{damage.bonus}}
		</span>
    </div>
    <div class='float-box dam-float'>
        <a data-action="applyDamage" data-tooltip="{{{localize 'FU.ChatApplyDamageTooltip'}}}">
            <span class='float-text' style=''>{{damage.total}}</span>
            {{localize (lookup translation.damageTypes damage.type)}}!
        </a>
    </div>
</div>