<div class="fu-tags">
    <div class="fu-tag">
        {{#if spell.duration}}
            {{spell.duration}}
        {{else}}
            {{localize 'FU.Duration'}}
        {{/if}}
    </div>
    <div class="fu-tag">
        {{#if spell.target}}
            {{spell.target}}
        {{else}}
            {{localize 'FU.Target'}}
        {{/if}}
    </div>
    <div class="fu-tag">
        {{#if spell.mpCost}}
            {{spell.mpCost}} {{localize 'FU.MindAbbr'}}
        {{else}}
            {{localize 'FU.MindPointCost'}}
        {{/if}}
    </div>
</div>

{{#if spell.opportunity}}
    {{> 'systems/projectfu/templates/chat/partials/chat-item-opportunity.hbs' opportunity=spell.opportunity}}
{{/if}}

{{#if (or spell.summary spell.description)}}
    {{> 'systems/projectfu/templates/chat/partials/chat-item-description.hbs' summary=spell.summary description=spell.description collapseDescriptions=collapseDescriptions}}
{{/if}}